@model UserLogin.Models.UserView
@{
    ViewData["Title"] = "AddUser";
}
<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-primary rounded p1-5 pr-5 pb-5">
            <div class="text-center">
                <h1 class="text-info">User Registration</h1>
            </div>
            <form method="post" asp-action="AddUser">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" placeholder="Enter Name" class="form-control" autocomplete="off" />
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input type="text" asp-for="Email" placeholder="Enter Email" class="form-control" autocomplete="off" />
                </div>
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input type="text" asp-for="Username" placeholder="Enter Username" class="form-control" autocomplete="off" />
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="text" asp-for="Password" placeholder="Enter Password" class="form-control" autocomplete="off" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-success btn-lg mb-1 float-right" value="Add" />
                </div>
            </form>
        </div>
    </div>
</div>
